@model WebApplication1.Models.utilisateur
@{
    ViewBag.Title = "Login";
   
}
<link href="~/Content/StyleSheet2.css" rel="stylesheet" />

<form method="post" action=@Url.Action("Login","Utilisateurs")>
    <div class="form-group">
        
        <input type="text" name="nom_utilisateur" placeholder="Username"  class="form-control" />
    </div>
    <div class="form-group">
        
        <input type="password" name="mot_de_passe" placeholder="Password"  class="form-control" />
    </div>

  

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Login" class="btn btn-default" />
        </div>
    </div>

</form>
